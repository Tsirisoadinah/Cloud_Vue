{
  "version": 8,
  "name": "Madagascar Basic",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "madagascar": {
      "type": "vector",
      "url": "mbtiles://madagascar"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f4f6f8"
      }
    },

    {
      "id": "water",
      "type": "fill",
      "source": "madagascar",
      "source-layer": "water",
      "paint": {
        "fill-color": "#4da6ff"
      }
    },

    {
      "id": "landuse",
      "type": "fill",
      "source": "madagascar",
      "source-layer": "landuse",
      "paint": {
        "fill-color": "#e8f5e9"
      }
    },

    {
      "id": "buildings",
      "type": "fill",
      "source": "madagascar",
      "source-layer": "building",
      "paint": {
        "fill-color": "#d0d0d0",
        "fill-opacity": 0.7
      }
    },

    {
      "id": "roads-major",
      "type": "line",
      "source": "madagascar",
      "source-layer": "transportation",
      "filter": ["==", "class", "primary"],
      "paint": {
        "line-color": "#ff9800",
        "line-width": 2.5
      }
    },

    {
      "id": "roads-secondary",
      "type": "line",
      "source": "madagascar",
      "source-layer": "transportation",
      "filter": ["==", "class", "secondary"],
      "paint": {
        "line-color": "#ffc107",
        "line-width": 2
      }
    },

    {
      "id": "roads-small",
      "type": "line",
      "source": "madagascar",
      "source-layer": "transportation",
      "filter": ["==", "class", "tertiary"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 1.2
      }
    }
  ]
}